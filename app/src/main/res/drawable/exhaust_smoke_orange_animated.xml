<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="32dp"
            android:height="16dp"
            android:viewportWidth="32"
            android:viewportHeight="16">
            
            <group android:name="smoke_trail">
                <!-- Orange-tinted exhaust smoke -->
                <path
                    android:fillColor="#80FFA080"
                    android:pathData="M2,6 Q0,6 0,8 Q0,10 2,10 Q4,10 4,8 Q4,6 2,6 Z" />
                    
                <path
                    android:fillColor="#70FFA080"
                    android:pathData="M6,5 Q4,5 4,7 Q4,9 6,9 Q8,9 8,7 Q8,5 6,5 Z" />
                    
                <path
                    android:fillColor="#60FFA080"
                    android:pathData="M10,7 Q8,7 8,9 Q8,11 10,11 Q12,11 12,9 Q12,7 10,7 Z" />
                    
                <path
                    android:fillColor="#50FFA080"
                    android:pathData="M14,6 Q12,6 12,8 Q12,10 14,10 Q16,10 16,8 Q16,6 14,6 Z" />
                    
                <path
                    android:fillColor="#40FFA080"
                    android:pathData="M18,8 Q16,8 16,10 Q16,12 18,12 Q20,12 20,10 Q20,8 18,8 Z" />
                    
                <!-- Small particles -->
                <path
                    android:fillColor="#60FFAA80"
                    android:pathData="M22,7 Q21,7 21,8 Q21,9 22,9 Q23,9 23,8 Q23,7 22,7 Z" />
                    
                <path
                    android:fillColor="#50FFAA80"
                    android:pathData="M25,9 Q24,9 24,10 Q24,11 25,11 Q26,11 26,10 Q26,9 25,9 Z" />
                    
                <path
                    android:fillColor="#40FFAA80"
                    android:pathData="M28,8 Q27,8 27,9 Q27,10 28,10 Q29,10 29,9 Q29,8 28,8 Z" />
            </group>
        </vector>
    </aapt:attr>
    
    <!-- Smoke movement and fade animation -->
    <target android:name="smoke_trail">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="1000"
                    android:valueFrom="0.8"
                    android:valueTo="0.2"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="800"
                    android:valueFrom="1.0"
                    android:valueTo="1.4"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="900"
                    android:valueFrom="1.0"
                    android:valueTo="1.2"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="translateX"
                    android:duration="1200"
                    android:valueFrom="0"
                    android:valueTo="8"
                    android:repeatCount="infinite"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>