<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#55FFD700"
                android:endColor="#77FFD700"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#44FFD700"
                android:endColor="#66FFD700"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFD700"
                android:endColor="#55FFD700"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
</selector>