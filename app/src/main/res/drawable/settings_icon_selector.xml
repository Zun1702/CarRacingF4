<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#99FFD700"
                android:endColor="#77FFD700"
                android:type="radial"
                android:gradientRadius="18dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#88FFD700"
                android:endColor="#66FFD700"
                android:type="radial"
                android:gradientRadius="18dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#66FFD700"
                android:endColor="#44FFD700"
                android:type="radial"
                android:gradientRadius="18dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/accent_yellow" />
        </shape>
    </item>
    
</selector>