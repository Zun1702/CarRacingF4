<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    android:focusableInTouchMode="true"
    tools:context=".RacingActivity">

    <!-- Pause Button -->
    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pause"
        android:background="@drawable/button_circular_background"
        android:contentDescription="Pause Race"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Race Title -->
    <TextView
        android:id="@+id/tvRaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/racing_title"
        style="@style/GameTitleText"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Race Info -->
    <TextView
        android:id="@+id/tvRaceInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Bet: 100 coins on Red Thunder"
        android:textSize="16sp"
        android:textColor="@color/accent_yellow"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRaceTitle" />

    <!-- Skip Instruction -->
    <TextView
        android:id="@+id/tvSkipInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press SPACE to skip"
        android:textSize="12sp"
        android:textColor="@color/text_light_gray"
        android:alpha="0.7"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRaceInfo" />



    <!-- Race Track Container -->
    <ScrollView
        android:id="@+id/svRaceTrack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/llPositions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSkipInstruction">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Race Lane 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/race_track_background"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCar1"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/car_red"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/progressCar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="@color/car_red"
                    android:backgroundTint="@color/track_light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Race Lane 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/race_track_background"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCar2"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/car_blue"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/progressCar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="@color/car_blue"
                    android:backgroundTint="@color/track_light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Race Lane 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/race_track_background"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCar3"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/car_green"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/progressCar3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="@color/car_green"
                    android:backgroundTint="@color/track_light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Race Lane 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/race_track_background"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCar4"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/car_yellow"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/progressCar4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="@color/car_yellow"
                    android:backgroundTint="@color/track_light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Race Lane 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/race_track_background"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCar5"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/car_purple"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/progressCar5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="@color/car_purple"
                    android:backgroundTint="@color/track_light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Position Display -->
    <LinearLayout
        android:id="@+id/llPositions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏆 Current Positions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_red_dark"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tvPosition1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1. Red"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPosition2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2. Blue"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPosition3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3. Green"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPosition4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4. Yellow"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPosition5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5. Purple"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Pause Popup Overlay - MUST BE AT THE END FOR PROPER Z-ORDER -->
    <LinearLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Pause Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏸️ GAME PAUSED"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_yellow"
                    android:textAlignment="center"
                    android:layout_marginBottom="24dp" />

                <!-- Audio Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔊 Sound Effects"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchSoundEffects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🎵 Background Music"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchBackgroundMusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Pause Menu Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnResume"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="▶️ RESUME RACE"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_green_background"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnRestartRace"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="🔄 RESTART RACE"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_orange_background"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnExitToMenu"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="🏠 EXIT TO MENU"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_red_background" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Countdown Text - Positioned at end for highest z-order -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="120sp"
        android:textStyle="bold"
        android:textColor="@color/accent_yellow"
        android:visibility="gone"
        android:elevation="10dp"
        android:background="@drawable/countdown_background"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>