<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 STATISTICS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <!-- Basic Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📈 Basic Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_yellow"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalRaces"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Races: 0"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvWinRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Win Rate: 0.0%"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvCurrentStreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Streak: 0"
                            android:textSize="14sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalBet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Bet: 0 coins"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvTotalWinnings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Winnings: 0 coins"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvFavoriteCar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Favorite Car: None"
                            android:textSize="14sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏆 Advanced Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_yellow"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBestWin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Best Win: 0 coins"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvAverageWin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Average Win: 0.0 coins"
                            android:textSize="14sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWorstLoss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Worst Loss: 0 coins"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Race History Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📜 Race History"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_yellow" />

                    <Button
                        android:id="@+id/btnClearHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Clear All"
                        android:textSize="12sp"
                        android:backgroundTint="@color/lose_red"
                        android:textColor="@color/white"
                        android:minHeight="0dp"
                        android:paddingHorizontal="12dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRaceHistory"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="⬅️ Back to Main Menu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/accent_yellow"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>