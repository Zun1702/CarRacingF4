<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    android:padding="32dp">

    <!-- F1 Logo -->
    <ImageView
        android:id="@+id/ivF1Logo"
        android:layout_width="200dp"
        android:layout_height="148dp"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@drawable/logof1" />

    <!-- Racing Car Logo -->

    <!-- Game Title -->
    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ CAR RACING BET"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/accent_yellow"
        android:layout_marginBottom="12dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:alpha="0" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultimate Racing Betting Experience"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:alpha="0" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/accent_yellow"
        android:progressBackgroundTint="@color/track_gray"
        android:layout_marginBottom="16dp" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/tvLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading assets..."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="32dp" />

    <!-- Version Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="48dp"
        android:alpha="0.6" />

</LinearLayout>