<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_background">

    <!-- Car Info Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/accent_yellow"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCarInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: 80 | Odds: 2.0x"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center" />

    </LinearLayout>

    <!-- Betting Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💰 Enter Your Bet Amount:"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etDialogBetAmount"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Enter bet amount"
        android:inputType="number"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/track_gray"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnConfirmBet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="✅ Confirm Bet"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_win_selector"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnRemoveBet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="🗑️ Remove Bet"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_lose_selector"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCancelBet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="❌ Cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_neutral_selector"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>